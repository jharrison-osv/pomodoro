{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "es2015",
    "lib": [
      "es2015",
      "dom"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "hammerjs",
      "node"
    ]
  },
  "exclude": [
    "./compiled",
    "./node_modules",
    "./dist",
    "./src/**/*.spec.ts",
    "./src/**/*.e2e-spec.ts"
  ],
  "awesomeTypescriptLoaderOptions": {
    "forkChecker": true,
    "useWebpackText": true
  }
}
